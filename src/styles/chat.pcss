.main-chat-header {
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #EAEAEA;
    padding: 0 20px;
    background: #FBFBFB;
}

.chat-companion {
    font-weight: 600;
    color: #1E1E1E;
    font-size: 13px;
}

.chat-header-actions {
    color: #999;
    display: flex;
    gap: 15px;
}

.chat-data {
    width: 310px;
    height: 100%;
    overflow-y: auto;
    background: #FBFBFB;
    border-right: 1px solid #EAEAEA;
}

.chat-row {
    display: flex;
    align-items: center;
    padding: 12px 10px;
    border-bottom: 1px solid #EAEAEA;
    position: relative;
    font-family: sans-serif;
    background-color: #fff;
    cursor: pointer;
    transition: background-color 0.2s;
}

.chat-row:hover {
    background-color: #E4EDFD;
}

.chat-row-avatar {
    width: 47px;
    height: 47px;
    border-radius: 50%;
    background-color: #EFEFEF;
    margin-right: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    font-size: 16px;
}

.chat-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 4px;
    align-items: center;
}

.chat-name {
    font-weight: 600;
    color: #1E1E1E;
    font-size: 13px;
}

.chat-time {
    font-size: 9px;
    color: #999;
}

.chat-subtitle {
    font-size: 12px;
    color: #999;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 190px;
}

.chat-badge {
    background-color: #3369F3;
    color: white;
    font-size: 11px;
    padding: 2px 6px;
    border-radius: 50%;
    font-weight: 500;
    min-width: 20px;
    height: 20px;
    text-align: center;
    position: absolute;
    right: 10px;
    bottom: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.chat-content {
    flex-grow: 1;
    overflow: hidden;
    min-width: 0;
}

.chat-data-container {
    display: flex;
    flex-direction: row;
    width: 100%;
    max-width: 1280px;
    height: 720px;
    margin: 0 auto;
    background: #FFF;
    box-shadow: 0 0 10px rgb(0 0 0 / 10%);
    border-radius: 12px;
    overflow: hidden;
}

.chat-data-container-content {
    display: flex;
    flex-direction: column;
    width: 310px;
}

.chat-data-container-content-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    background: #F5F5F5;
}

.chat-data-message-container {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.messages-pane {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: 0 20px;
    background: #F5F5F5;
}

.message-area {
    display: flex;
    align-items: center;
    padding: 10px 0;
}

.send-button {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    background: #3369F3;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    cursor: pointer;
}

.chat-download {
    width: 32px;
    height: 32px;
    color: #999;
    cursor: pointer;
}

.chat-sendmsg {
    width: 28px;
    height: 28px;
    color: white;
}

.chat-message-container {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.chat-message {
    min-height: 32px;
    border: none;
    background-color: #EFEFEF;
    border-radius: 30px;
    padding: 10px 20px;
    font-size: 12px;
    outline: none;
}

.chat-enter-message {
    display: flex;
    width: 100%;
    align-items: center;
    margin-top: auto;
    padding: 10px 0;
    border-top: 1px solid #EAEAEA;
    background: #FBFBFB;
    gap: 10px;
}

.chat-sendmsg-container, .chat-download-container {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
}

/* Messages styling */
.messages-list {
    flex: 1;
    overflow-y: auto;
    padding: 20px 0;
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.message-row {
    display: flex;
    align-items: flex-end;
    margin-bottom: 10px;
}

.message-row.mine {
    justify-content: flex-end;
}

.message-bubble {
    max-width: 402px;
    background: #F8F8F8;
    border-radius: 12px;
    padding: 11px;
    position: relative;
}

.message-row.mine .message-bubble {
    background: #E4EDFD;
}

.message-time {
    font-size: 9px;
    color: #999;
    margin-top: 5px;
    text-align: right;
}

.message-content {
    font-size: 12px;
    color: #1E1E1E;
    line-height: 1.4;
}

/* Empty state for chat */
.chat-empty-state {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    color: #999;
    font-size: 12px;
}

/* Search and profile in header */
.profile-link {
    color: #999;
    text-decoration: none;
    font-size: 12px;
    padding: 5px;
}

/* Responsive adjustments */
@media (width <= 768px) {
    .chat-data-container {
        flex-direction: column;
        height: 100vh;
    }

    .chat-data-container-content {
        width: 100%;
        height: auto;
    }

    .chat-data {
        width: 100%;
    }
}




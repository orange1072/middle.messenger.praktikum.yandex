<div class="change-data">
        <a href="#" class="change-avatar-link"  data-page="ChangeAvatar">{{>Avatar src="{{avatar}}" class="profile-avatar" }}</a>
    <form  class="profile-data form-container" method="POST" enctype="multipart/form-data">
        <div class="profile-row">
            <label >Почта </label>
            <span >{{>Input  id="email" name="email"  type="email"  value="pochta@yandex.ru"}}</span>
        </div>
        <div class="profile-row">
            <label>Логин </label>
            <span>{{>Input id="login"  name="login" type="text"  value="ivanivanov" }}</span>
        </div>
        <div class="profile-row">
            <label>Имя </label>
            <span>{{>Input id="first_name"  name="first_name" type="text"  value="Иван" }}</span>
        </div>
        <div class="profile-row">
            <label>Фамилия </label>
            <span>{{>Input id="second_name"  name="second_name" type="text"  value="Иванов" }}</span>
        </div>
        <div class="profile-row">
            <label>Имя в чате </label>
            <span>{{>Input id="display_name"  name="display_name" type="text"  value="Иван" }}</span>
        </div>
        <div class="profile-row ">
            <label>Телефон </label>
            <span>{{>Input id="phone"  name="phone" type="tel" value="8 (888) 123-45-55" }}</span>
        </div>
        {{>Button class="btn btn-primary btn-save" type="submit" text="Сохранить"}}
    </form>
</div>
